# ============================================
# BSC LIQUIDATION BOT CONFIGURATION
# ============================================

# --------------------------------------------
# 1. WALLET CONFIGURATION
# --------------------------------------------
PRIVATE_KEY=0xYOUR_PRIVATE_KEY_HERE

# --------------------------------------------
# 2. BSC RPC ENDPOINTS
# --------------------------------------------
BSC_RPC_QUICKNODE=https://your-endpoint.bsc.quiknode.pro/your-key/
BSC_RPC_NODEREAL=https://bsc-mainnet.nodereal.io/v1/your-key
BSC_RPC_ANKR=https://rpc.ankr.com/bsc/your-key
BSC_RPC_PUBLIC=https://bsc-dataseed.binance.org/
BSC_RPC_PUBLIC2=https://bsc-dataseed1.defibit.io/
BSC_RPC_PUBLIC3=https://bsc-dataseed1.ninicoin.io/

# --------------------------------------------
# 3. CONTRACT ADDRESSES
# --------------------------------------------
LIQUIDATION_CONTRACT_ADDRESS=    # Fill after deployment

# Venus Protocol (BSC Mainnet)
VENUS_COMPTROLLER=0xfD36E2c2a6789Db23113685031d7F16329158384
VENUS_ORACLE=0xd8B6dA2bfEC71D684D3E2a2FC9492dDad5C3787F

# --------------------------------------------
# 4. LIQUIDATION PARAMETERS
# --------------------------------------------
# Minimum profit threshold (in BNB)
MIN_PROFIT_BNB=0.01

# Maximum liquidation size (in BNB equivalent)
MAX_LIQUIDATION_SIZE=100

# Health factor threshold (1.0 = liquidatable)
HEALTH_FACTOR_THRESHOLD=1.0

# Polling interval (milliseconds)
POLLING_INTERVAL_MS=10000

# Slippage tolerance for swaps (basis points: 100 = 1%)
SLIPPAGE_BPS=100

# --------------------------------------------
# 5. TELEGRAM NOTIFICATIONS
# --------------------------------------------
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# --------------------------------------------
# 6. ADVANCED SETTINGS
# --------------------------------------------
# Use event-based monitoring (faster but more complex)
USE_EVENT_MONITORING=false

# Database for tracking borrowers (optional)
DATABASE_URL=

# Gas price multiplier (1.1 = 10% above market)
GAS_PRICE_MULTIPLIER=1.1

# Max gas price willing to pay (in gwei)
MAX_GAS_PRICE_GWEI=20
