# ============================================
# BSC ARBITRAGE BOT CONFIGURATION
# ============================================

# --------------------------------------------------------------------
# 1. WALLET CONFIGURATION
# --------------------------------------------------------------------
# Your private key (NEVER share this!)
PRIVATE_KEY=

# --------------------------------------------------------------------
# 2. BSC RPC ENDPOINTS (Multiple for failover)
# --------------------------------------------------------------------
# Premium RPCs (Recommended for best performance)
BSC_RPC_QUICKNODE=https://your-endpoint.bsc.quiknode.pro/your-key/
BSC_RPC_NODEREAL=https://bsc-mainnet.nodereal.io/v1/your-key
BSC_RPC_ANKR=https://rpc.ankr.com/bsc/your-key

# Public RPCs (Free - Good for testing)
BSC_RPC_PUBLIC=https://bsc-dataseed.binance.org/
BSC_RPC_PUBLIC2=https://bsc-dataseed1.defibit.io/
BSC_RPC_PUBLIC3=https://bsc-dataseed1.ninicoin.io/

# --------------------------------------------------------------------
# 3. TRADING CONFIGURATION
# --------------------------------------------------------------------
# Base token (WBNB - Wrapped BNB)
ARB_FOR=0xbb4CdB9CBd36B01bD1cBaEBF2De08d9173bc095c

# Target tokens to arbitrage against WBNB (comma-separated)
# BUSD, USDT, USDC, ETH, BTCB
ARB_AGAINST_TOKENS=0xe9e7CEA3DedcA5984780Bafc599bD69ADd087D56,0x55d398326f99059fF775485246999027B3197955,0x8AC76a51cc950d9822D68b83fE1Ad97B32Cd580d,0x2170Ed0880ac9A755fd29B2688956BD959F933F8,0x7130d2A12B9BCbFAe4f2634d864A1Ee1Ce3Ead9c

# --------------------------------------------------------------------
# 4. BOT PARAMETERS
# --------------------------------------------------------------------
# Minimum price difference to consider (in percent)
PROFIT_THRESHOLD=0.3

# Minimum profit required (in BNB)
MIN_PROFIT_THRESHOLD=0.001

# Flash loan amount range (in BNB)
MIN_FLASH_AMOUNT=0.1
MAX_FLASH_AMOUNT=10.0

# How often to check for opportunities (milliseconds)
POLLING_INTERVAL_MS=5000

# Slippage tolerance (basis points: 100 = 1%)
SLIPPAGE_BPS=100

# --------------------------------------------------------------------
# 5. CONTRACT ADDRESS (Fill after deployment)
# --------------------------------------------------------------------
ARBITRAGE_CONTRACT_ADDRESS=

# --------------------------------------------------------------------
# 6. TELEGRAM NOTIFICATIONS
# --------------------------------------------------------------------
# Get bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Get your chat ID by sending a message to your bot
TELEGRAM_CHAT_ID=your_chat_id_here

# --------------------------------------------------------------------
# 7. BSCSCAN API KEY (Optional - for contract verification)
# --------------------------------------------------------------------
BSCSCAN_API_KEY=your_bscscan_api_key_here
